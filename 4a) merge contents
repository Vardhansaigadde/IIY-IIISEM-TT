#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *f1, *f2, *f3;
    char ch;
    char file1[50], file2[50], file3[50];

    // Input file names
    printf("Enter name of first file: ");
    scanf("%s", file1);

    printf("Enter name of second file: ");
    scanf("%s", file2);

    printf("Enter name of output (merged) file: ");
    scanf("%s", file3);

    // Open the first file for reading
    f1 = fopen(file1, "r");
    if (f1 == NULL) {
        printf("Error: Cannot open %s\n", file1);
        exit(1);
    }

    // Open the second file for reading
    f2 = fopen(file2, "r");
    if (f2 == NULL) {
        printf("Error: Cannot open %s\n", file2);
        fclose(f1);
        exit(1);
    }

    // Open the third file for writing (merged output)
    f3 = fopen(file3, "w");
    if (f3 == NULL) {
        printf("Error: Cannot create %s\n", file3);
        fclose(f1);
        fclose(f2);
        exit(1);
    }

    // Copy contents of first file
    while ((ch = fgetc(f1)) != EOF)
        fputc(ch, f3);

    // Copy contents of second file
    while ((ch = fgetc(f2)) != EOF)
        fputc(ch, f3);

    printf("Files merged successfully into %s\n", file3);

    // Close all files
    fclose(f1);
    fclose(f2);
    fclose(f3);

    return 0;
}
